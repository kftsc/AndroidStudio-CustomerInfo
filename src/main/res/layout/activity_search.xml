<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kftsc.custapp.SearchActivity">

    <EditText
        android:id="@+id/searchText"
        android:layout_width="207dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="客户姓名"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/findBtn"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="16dp"
        android:text="搜索"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/companyText"
        android:layout_width="112dp"
        android:layout_height="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="94dp"
        android:background="#97b6b3"
        android:gravity="center"
        android:text="公司"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/phoneText"
        android:layout_width="117dp"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="#97b6b3"
        android:gravity="center"
        android:text="手机号"
        app:layout_constraintStart_toEndOf="@+id/companyText"
        app:layout_constraintTop_toBottomOf="@+id/curTimeText" />

    <TextView
        android:id="@+id/addressText"
        android:layout_width="142dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="144dp"
        android:background="#97b6b3"
        android:gravity="center"
        android:text="地址"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/phoneText"
        app:layout_constraintTop_toBottomOf="@+id/findBtn" />

    <Button
        android:id="@+id/newPurchaseBtn"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="21dp"
        android:text="编辑购油"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purchaseList" />

    <Button
        android:id="@+id/sumBtn"
        android:layout_width="126dp"
        android:layout_height="46dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="21dp"
        android:text="统计"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/newPurchaseBtn"
        app:layout_constraintTop_toBottomOf="@+id/purchaseList" />

    <ListView
        android:id="@+id/purchaseList"
        android:layout_width="0dp"
        android:layout_height="174dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="14dp"
        android:text="     油品"
        app:layout_constraintBottom_toTopOf="@+id/purchaseList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companyText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:text="型号"
        app:layout_constraintBottom_toTopOf="@+id/purchaseList"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/companyText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="13dp"
        android:text="数量（吨）"
        app:layout_constraintBottom_toTopOf="@+id/purchaseList"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/phoneText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="96dp"
        android:layout_height="20dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="13dp"
        android:text="时间"
        app:layout_constraintBottom_toTopOf="@+id/purchaseList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/addressText"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/durationText"
        android:layout_width="137dp"
        android:layout_height="38dp"
        android:layout_marginEnd="123dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/searchText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="69dp"
        android:layout_height="38dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="时间限制"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchText" />

    <EditText
        android:id="@+id/curTimeText"
        android:layout_width="133dp"
        android:layout_height="37dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/durationText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="76dp"
        android:layout_height="31dp"
        android:layout_marginBottom="94dp"
        android:layout_marginEnd="35dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:text="个月内"
        app:layout_constraintBottom_toTopOf="@+id/addressText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/durationText"
        app:layout_constraintTop_toBottomOf="@+id/findBtn" />

    <CheckBox
        android:id="@+id/cAllInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="48dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="28dp"
        android:text="全部"
        app:layout_constraintBottom_toTopOf="@+id/checkBox2"
        app:layout_constraintEnd_toStartOf="@+id/curTimeText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <CheckBox
        android:id="@+id/cOneInfo"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="186dp"
        android:layout_marginStart="16dp"
        android:text="仅油品"
        app:layout_constraintBottom_toTopOf="@+id/companyText"
        app:layout_constraintEnd_toStartOf="@+id/delete"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete"
        android:layout_width="76dp"
        android:layout_height="36dp"
        android:layout_marginBottom="14dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="44dp"
        android:text="删除"
        app:layout_constraintBottom_toTopOf="@+id/addressText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/curTimeText"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />
</android.support.constraint.ConstraintLayout>
